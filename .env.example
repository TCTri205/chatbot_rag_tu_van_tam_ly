# ⚠️ PRODUCTION WARNING: Change all default values before deploying!

# API Keys
GOOGLE_API_KEY=your_google_api_key_here
# CRITICAL: Generate with: openssl rand -hex 32
SECRET_KEY=your_super_secret_key_32_chars_minimum_change_this

# Database
POSTGRES_USER=chatbot_user
POSTGRES_PASSWORD=super_secure_password_change_this
POSTGRES_DB=chatbot_db
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Redis
REDIS_URL=redis://redis:6379/0

# App
# PRODUCTION: Set DEBUG=False
DEBUG=True
PROJECT_NAME=Chatbot TamLy
API_V1_STR=/api/v1

# Chroma (Internal Docker Network)
CHROMA_HOST=chroma
CHROMA_PORT=8000

# Phase 4: Security & CORS
# PRODUCTION: Set to your actual domain(s), comma-separated
# Example: BACKEND_CORS_ORIGINS=https://tamly.vn,https://www.tamly.vn
BACKEND_CORS_ORIGINS=http://localhost,http://localhost:80,http://localhost:8080

# Phase 4: Rate Limiting
RATE_LIMIT_ENABLED=True

# Phase 4: Monitoring
PROMETHEUS_ENABLED=True

# Grafana (CRITICAL: Change in production!)
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password
